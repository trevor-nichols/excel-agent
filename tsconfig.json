{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es5", "es6", "es2015.collection", "es2015.iterable"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}